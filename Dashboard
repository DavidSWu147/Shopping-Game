    #     self.screen.blit(self.budgetObj) 


class Remaining(object):
    def __init__(self):
        pygame.init()

    def remaining(self, text):
        self.text = 'Remaining: \n'
        if self.masterClass.inputDepartment.departmentChoice == 'Food':
            self.remaining = self.masterClass.inputBudget.initialBudget - self.masterClass.foodPrices
        if self.masterClass.inputDepartment.departmentChoice == 'Home':
            self.remaining = self.masterClass.inputBudget.initialBudget - self.homePrices
        if self.masterClass.inputDepartment.departmentChoice == 'Entertainment':
            self.remaining = self.masterClass.inputBudget.initialBudget - self.entertainmentPrices
        
        print(self.text, self.remaining)

class ShoppingList(object):
    def __init__(self):
        pygame.init()
    def collision(self, click):
        return self.rect.collidepoint(click)
    def AddToShoppinglist(self, item):
        self.text = 'ShoppingList : \n'
        print(self.masterClass.inputShoppingList.shoppinglist)
